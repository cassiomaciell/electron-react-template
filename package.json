	"scripts": {
		"dev": "pnpm clean && cross-env NODE_ENV=development concurrently -n UI,Render --kill-others  \"pnpm:ui:dev\" \"node ./scripts/serve.js\"",
		"preview": "pnpm clean && pnpm build:ui:render && node ./scripts/create-package.js && electron .build",
		"dist": "pnpm clean && pnpm build:ui:render && node ./scripts/create-package.js && pnpm build:electron",
		"ui:dev": "vite",
		"build:render": "webpack --mode=production",
		"build:ui": "tsc && vite build",
		"build:ui:render": "pnpm build:ui && pnpm build:render",
		"build:electron": "electron-builder build -c electron-builder.config.js",
		"clean": "rimraf .build && rimraf dist"
	},
